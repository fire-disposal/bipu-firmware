{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": ". $HOME/esp/esp-idf/export.sh && idf.py menuconfig",
            "windows": {
                "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py menuconfig"
            }
        },
        {
            "label": "Build",
            "group": "build",
            "type": "shell",
            "command": ". $HOME/esp/esp-idf/export.sh && idf.py build",
            "windows": {
                "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py build"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}/build"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": ". $HOME/esp/esp-idf/export.sh && idf.py clean",
            "windows": {
                "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py clean"
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": ". $HOME/esp/esp-idf/export.sh && idf.py flash",
            "windows": {
                "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py flash"
            }
        },
        {
            "label": "Monitor",
            "type": "shell",
            "command": ". $HOME/esp/esp-idf/export.sh && idf.py monitor",
            "windows": {
                "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py monitor"
            }
        },
        {
            "label": "Erase Flash",
            "type": "shell",
            "command": ". $HOME/esp/esp-idf/export.sh && idf.py erase_flash",
            "windows": {
                "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py erase_flash"
            }
        },
        {
            "label": "Fullclean",
            "type": "shell",
            "command": ". $HOME/esp/esp-idf/export.sh && idf.py fullclean",
            "windows": {
                "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py fullclean"
            }
        }
    ]
}